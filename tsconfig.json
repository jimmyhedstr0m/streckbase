{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "@config/*": ["src/config/*"],
      "@controllers/*": ["src/controllers/*"],
      "@helpers": ["src/helpers/index"],
      "@repositories/*": ["src/repositories/*"],
      "@services/*": ["src/services/*"],
    }
  },
  "include": [
    "src/**/*",
    "src/public/*"
  ]
}