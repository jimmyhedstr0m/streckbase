{
  "name": "streckbase-server",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run copy-static-assets",
    "serve": "node dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "copy-static-assets": "ts-node --no-cache copyStaticAssets.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/mysql": "^2.15.5",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "mysql": "^2.15.0",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@types/request": "^2.48.1",
    "@types/shelljs": "^0.8.0",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.6",
    "shelljs": "^0.8.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  }
}